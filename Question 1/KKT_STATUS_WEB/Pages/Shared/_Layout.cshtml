<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KKT_STATUS_WEB.styles.css" asp-append-version="true" />
</head>
<body>

    <div class="text-center">
        <h1 class="display-4">Мониторинг состояния ККТ</h1>
    </div>
    <div class="container">
        <main role="main" class="pb-3">            
            @RenderBody()
        </main>
    </div>
    @*Здесь была область определения footer CSS:border-top footer text-muted*@
    <footer class="">
        <div class="container">
            <P class="blocktext" style="margin-left: auto;margin-right: auto;">Данные актуальны на @DateTime.Now</P>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>